@page
@model PRN_Project.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "_LoginLayout";
}

<div class="container border">
<form method="post">
	<div class="text-danger" asp-validation-summary="ModelOnly"/>
		@if (Model.isAuthenticationFailed)
		{
			<div class="row form-group">
				<span class="text-danger">Login Failed</span>
			</div>
		}
	<div class="form-group row" style="margin: 20px">
		<div class="col-2">
			<label asp-for="Credential.Username"></label>
		</div>
		<div class="col-3">
			<input type="text" asp-for="Credential.Username" class="form-control"/>
		</div>
		<span asp-validation-for="Credential.Username" class="text-danger"></span>
		</div>
	<div class="form-group row" style="margin: 20px">
		<div class="col-2">
			<label asp-for="Credential.Password"></label>
		</div>
		<div class="col-3">
			<input type="text" asp-for="Credential.Password" class="form-control"/>
	</div>
	</div>
	<div class="form-group row" style="margin: 20px">
		<div class="col-2">
			<input type="submit" value="Login" class="btn btn-primary"/>
		</div>
	</div>

</form>
</div>