@page
@model PRN_Project.Pages.Accounts.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
}

<h1>Register</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterForm.Username" class="control-label"></label>
                <input asp-for="RegisterForm.Username" class="form-control" />
                <span asp-validation-for="RegisterForm.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.Password" class="control-label"></label>
                <input type="password" asp-for="RegisterForm.Password" class="form-control" />
                <span asp-validation-for="RegisterForm.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.FirstName" class="control-label"></label>
                <input asp-for="RegisterForm.FirstName" class="form-control" />
                <span asp-validation-for="RegisterForm.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.LastName" class="control-label"></label>
                <input asp-for="RegisterForm.LastName" class="form-control" />
                <span asp-validation-for="RegisterForm.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.NickName" class="control-label"></label>
                <input asp-for="RegisterForm.NickName" class="form-control" />
                <span asp-validation-for="RegisterForm.NickName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
